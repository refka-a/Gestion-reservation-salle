{% extends 'base.html.twig' %}

{% block title %}Pricing index{% endblock %}

{% block body %}
    <h1>Pricing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Beneficiary</th>
                <th>Salle</th>
                <th>Timing</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pricing in pricings %}
            <tr>
                <td>{{ pricing.id }}</td>
                <td>{{ pricing.idBeneficiary }}</td>
                <td>{{ pricing.idSalle }}</td>
                <td>{{ pricing.idTiming }}</td>
                <td>{{ pricing.price }}</td>
                <td>
                    <a href="{{ path('pricing_show', {'id': pricing.id}) }}">show</a>
                    <a href="{{ path('pricing_edit', {'id': pricing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pricing_new') }}">Create new</a>
{% endblock %}
