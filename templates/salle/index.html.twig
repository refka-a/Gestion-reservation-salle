<body>
<nav class="navbar navbar-inverse">
  <ul class="nav navbar-nav">
    <li><a href="/admin/users">Utilisateurs</a></li>
    <li><a href="/admin/salle">Salles</a></li>
    <li><a href="/admin/reservation">Réservation</a></li>
    <li><a href="/logout">Logout</a></li>
  </ul>
  </nav>

<h1 align="center">Créer or Update salle:</h1>


{% block body %}
   

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Salle</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.id }}</td>
                <td>{{ salle.salle }}</td>
                <td>{{ salle.description }}</td>
                <td>
                    <a href="{{ path('salle_show', {'id': salle.id}) }}">show</a>
                    <a href="{{ path('salle_edit', {'id': salle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('salle_new') }}">Create new</a>
{% endblock %}
